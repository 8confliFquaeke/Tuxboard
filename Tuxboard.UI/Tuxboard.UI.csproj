<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Jonathan "JD" Danylko</Authors>
    <Product>Tuxboard</Product>
    <Description>Front-end code for Tuxboard, an open source dashboard framework</Description>
    <Copyright>2019-2020</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="bundleconfig.json" />
    <Content Remove="compilerconfig.json" />
  </ItemGroup>


  <ItemGroup>
    <Folder Include="contentFiles\cs\netcoreapp3.1\" />
    <Folder Include="wwwroot\js\" />
    <Folder Include="wwwroot\lib\" />
  </ItemGroup>


  <ItemGroup>
    <None Include="bundleconfig.json" />
    <None Include="compilerconfig.json" />
    <None Include="wwwroot\scripts\common.js" />
    <None Include="wwwroot\scripts\tuxboard.js" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="BuildBundlerMinifier" Version="3.2.435" />
    <PackageReference Include="BuildWebCompiler" Version="1.12.405" />
    <PackageReference Include="Lamar" Version="4.1.0" />
    <PackageReference Include="Lamar.Microsoft.DependencyInjection" Version="4.1.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.7.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\Tuxboard.Core\Tuxboard.Core.csproj" />
  </ItemGroup>


  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)TuxboardControllers\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\TuxboardControllers&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Widgets\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Widgets&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)wwwroot\scripts\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\wwwroot\scripts&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)wwwroot\scss\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\wwwroot\scss&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Views\LayoutDialog\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Views\LayoutDialog&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Views\WidgetDialog\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Views\WidgetDialog&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Views\Shared\ChangeLayoutFrame.cshtml&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Views\Shared\ChangeLayoutFrame.cshtml&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Views\Shared\WidgetDialogFrame.cshtml&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Views\Shared\WidgetDialogFrame.cshtml&quot; /E /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)Views\Shared\Components\*.*&quot; &quot;$(ProjectDir)contentFiles\cs\netcoreapp3.1\Views\Shared\Components&quot; /E /Y /I&#xD;&#xA;&#xD;&#xA;" />
  </Target>


  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="del &quot;$(ProjectDir)contentfiles\cs\netcoreapp3.1\*.*&quot; /S /Q" />
  </Target>

</Project>
