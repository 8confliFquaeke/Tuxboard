<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Jonathan "JD" Danylko</Authors>
    <Product>Tuxboard</Product>
    <Description>Front-end code for Tuxboard, an open source dashboard framework</Description>
    <Copyright>2019-2020</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="bundleconfig.json" />
    <Content Remove="compilerconfig.json" />
  </ItemGroup>


  <ItemGroup>
    <Folder Include="wwwroot\js\" />
    <Folder Include="wwwroot\lib\" />
  </ItemGroup>


  <ItemGroup>
    <None Include="bundleconfig.json" />
    <None Include="compilerconfig.json" />
    <None Include="wwwroot\scripts\common.js" />
    <None Include="wwwroot\scripts\tuxboard.js" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="BuildBundlerMinifier" Version="3.2.435" />
    <PackageReference Include="BuildWebCompiler" Version="1.12.405" />
    <PackageReference Include="Lamar" Version="4.1.0" />
    <PackageReference Include="Lamar.Microsoft.DependencyInjection" Version="4.1.0" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.7.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\Tuxboard.Core\Tuxboard.Core.csproj" />
  </ItemGroup>


  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="del .\content\*.* /s /q&#xD;&#xA;xcopy TuxboardControllers\*.* .\content\TuxboardControllers /E /Y /I&#xD;&#xA;xcopy Views\LayoutDialog\*.* .\content\Views\LayoutDialog /E /Y /I&#xD;&#xA;xcopy Views\WidgetDialog\*.* .\content\Views\WidgetDialog /E /Y /I&#xD;&#xA;xcopy Views\Shared\Components\*.* .\content\Views\Shared\Components /E /Y /I&#xD;&#xA;xcopy Views\Shared\ChangeLayoutFrame.cshtml .\content\Views\Shared\&#xD;&#xA;xcopy Views\Shared\WidgetDialogFrame.cshtml .\content\Views\Shared\&#xD;&#xA;xcopy Widgets .\content\Widgets /E /Y /I&#xD;&#xA;xcopy wwwroot\scripts .\content\wwwroot\scripts /E /Y /I&#xD;&#xA;xcopy wwwroot\scss .\content\wwwroot\scss /E /Y /I&#xD;&#xA;" />
  </Target>

</Project>
